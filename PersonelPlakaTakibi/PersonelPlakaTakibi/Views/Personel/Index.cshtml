@model IEnumerable<PersonelPlakaTakibi.Models.Personel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Personel Araç Takip Listesi</h2>
<table id="myTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Ad
            </th>
            <th>
                Soyad
            </th>
            <th>
                Telefon Numarası
            </th>
            <th>
                Araç Var Mı?
            </th>
            <th>
                Araç Plakası
            </th>
             <th>
                Araç Özellikleri
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonelAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonelSoyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonelTelNo)
                </td>
                <td>
                    @if (item.PersonelAracVarMi==true)
                    {
                        <button class="btn btn-warning btn-block" disabled><b>Var</b></button>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-block" disabled><b>Yok</b></button>
                    }
                </td>
                <td>
                    @if (item.PersonelAracPlakasi==null)
                    {
                        <button class="btn btn-secondary btn-block"disabled><b>Yok</b></button>
                    }
                    else
                    {
                        <button class="btn btn-warning btn-block"disabled><b>@item.PersonelAracPlakasi</b></button>
                    }
                    
                </td>
                <td>
                     @if (item.PersonelAracÖzellikleri==null)
                    {
                        <button class="btn btn-secondary btn-block"disabled><b>Yok</b></button>
                    }
                    else
                    {
                        <button class="btn btn-warning btn-block"disabled><b>@item.PersonelAracÖzellikleri</b></button>
                    }
                </td>
                <td>
                    <a asp-action="Güncelle" asp-route-id="@item.PersonelId" class="btn btn-info">Düzenle</a> |
                    <a asp-action="Sil" asp-route-id="@item.PersonelId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<div class="row">
    <div class="col-4">
        
    </div>
    <div class="col-4">
        <a class="btn btn-primary btn-block" asp-area="" asp-controller="Personel" asp-action="Ekle">YENİ PERSONEL BİLGİSİ EKLE</a>
    </div>
    <div class="col-4">
        
    </div>
</div>

